[Unit]
Description=Kolibri Server
ConditionPathExists=/var/lib/flatpak/app/org.learningequality.Kolibri

[Service]
Type=simple
ExecStart=@bindir@/flatpak run --no-desktop --command=kolibri org.learningequality.Kolibri start --foreground --port=@KOLIBRI_PORT@
Environment=KOLIBRI_RUN_MODE=flatpaktest
User=kolibri
PrivateTmp=yes
Restart=on-failure
